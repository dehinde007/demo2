<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks' => true %>
<body id="wall_signin">
	
<div id="signin_head"><p id="logon"><%= link_to "HALLIT", home_path, id: "logo" %></p>
	<img src="/assets/images/beta.png", alt="beta", id="beta_img" />
</div>

<div id="message_wall">
	<p id="mssg_text">Share your vision, thoughts, ideas, quotes and wisdom with people and friends on Hallit</p>
	
</div>

<div id="phone_wall">
	<div><img src="/assets/images/phone.png", alt="phone", id="phone_img" /></div>
	<div><img src="/assets/images/shot.png", alt="shot", id="shot_img" /></div>
</div>	


    
<div id="signin_box">
	
<h1 id="sign_h">Sign in</h1>
<hr />
<div id="signin_fields">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div id="field_box">
      <p class="signin_form"><%= f.label :email %>
      <%= f.text_field :email %></p>

      <p class="signin_form"><%= f.label :password %>
      <%= f.password_field :password %></p>
      
      <%= f.submit "Sign in", class: "btn btn-large btn-success" %>
    <% end %>

    <p id="signup_link">New user? <%= link_to "Sign up now!", signup_path %></p></div>
</div>
</div>

</body>