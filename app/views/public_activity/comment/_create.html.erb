<% if activity.trackable %> 
<span class="font-fam1 blacklink userpartialimg"><%= image_tag activity.owner.avatar(:thumb), class: "img-circle" %><%= link_to activity.owner.username, activity.owner if activity.owner %></span> posted comment
<span> <%= time_ago_in_words(activity.created_at) %> ago</span>
<%= link_to (image_tag activity.trackable.micropost.photo.url(:square), class: "trackable"), activity.trackable.micropost %>
<hr />
<% else %> 
<span class="blacklink"><%= link_to activity.owner.username, activity.owner if activity.owner %></span> commented a hall which has been deleted!
<hr />
<% end %>



