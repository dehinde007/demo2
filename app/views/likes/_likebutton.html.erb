<div id="likke"><% if like = current_user.likes.find_by_micropost_id(@micropost.id) %>
<%= form_for like, :html => { :method => :delete } do |f| %>
<span class="unlike_glyph"><%= button_tag "", type: 'submit', class: "btn btn-default glyphicon glyphicon-heart" %></span>
<% end %>      
<% else %>
<%= form_for [@micropost, @micropost.likes.build] do |f| %>
 <%= f.hidden_field :micropost_id %>
 <%= f.hidden_field :user_id, :value => current_user.id %>
  <span class="like_glyph">
    <%= button_tag "", type: 'submit', class: "btn btn-default glyphicon glyphicon-heart" %>
  </span>
<% end %>
<% end %>  
</div>