<div id="likke">
	<div id="likky">
<% if like = (current_user.likes.find_by_micropost_id(@micropost.id))%>
   <%= form_for like, :html => { :method => :delete }, :remote => true do |f| %>
    <span class="unlike_glyph"><%= button_tag "", type: 'submit', class: "btn btn-default glyphicon glyphicon-heart" %></span>
   <% end %>  
   </div>    
<% else %>
    <div id="likki">
   <%= form_for [@micropost, @micropost.likes.new], :remote => true do |f| %>
    <%= f.hidden_field :micropost_id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <span class="like_glyph">
    <%= button_tag "", type: 'submit', class: "btn btn-default glyphicon glyphicon-heart" %>
    </span>
   <% end %>
   </div>
<% end %>
  
</div>