<p><li class="commentpartial" id=<%= dom_id(comment) %>>
  <span class="commentimg"><%= image_tag comment.user.avatar.url(:thumb), class: "img-circle" %></span>
  <%= link_to comment.user.username, comment.user, class: "font-fam1 commentusername hov" %>

 <span class="font-fam2 commentbody">
 <%= comment.body %>  <span class="commenttime font-fam1"><%= time_ago_in_words(comment.created_at) %></span>
<% if current_user?(comment.user) %> 
 <%= link_to [comment.micropost, comment], :method => :delete,
                                           :remote => true, 
                                           :class => 'delete_pony hov apptrash' do %>
  <span class="glyphicon glyphicon-trash"></span>             
 <% end %>
 <% end %>
 </span>

</li>
</p>

