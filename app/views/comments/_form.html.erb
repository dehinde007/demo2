<%= form_for [@micropost, @micropost.comments.build], remote: true do |f| %>

  <span>
    <%= f.text_area :body, class: "commentform", placeholder: "Leave comment..." %>
  </span><br />
  <section class="commentformbtn appbutton">
    <%= f.submit "comment", class: "btn-primary" %>
  </section>
<% end %>
