  <p class="nmcp1ba">Upload Hall</p>

  <p>
   <%= f.text_area :content, :class =>"font-fam2 nmcp1c", placeholder: "Write more" %>
  </p>

 <br /> 
 <p class="appbutton"><%= f.submit "Share", class: "nmcp1d btn btn-primary" %></p>
  
 <% end %> 
