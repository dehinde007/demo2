<%= form_for @micropost, :html => {:multipart => true, :id => "nform"} do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="font-fam2 container nmcp">
<div class="nmcp1">
<p>Advert one</p>	
<%= f.file_field :ad1, class: "font-fam2" %>
<%= f.text_field :ad1text, class: "edt1", placeholder: "..." %>
<br /><br /><br />

<p>Advert Two</p>	
<%= f.file_field :ad2, class: "" %>
<%= f.text_field :ad2text, class: "edt1", placeholder: "..." %>
<br /><br /><br />

<p>Advert Three</p>	
<%= f.file_field :ad3, class: "" %>
<%= f.text_field :ad3text, class: "edt1", placeholder: "..." %>
