<%content_for :title, "Create Hall | Upload Hall"%>
<br /><br /><br /><br /><br>

<%= form_for @micropost, :html => {:multipart => true, :id => "nform"} do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="font-fam1 container nmcp">
<div class="nmcp1">

  <section class="nmcp1a">
   <section><%= f.file_field :photo, onchange: "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());" %></section> 
  </section>
  
  <p class="glyphicon glyphicon-cloud nmcp1b" data-toggle="tooltip" data-placement="top" title="Upload a Hall" onclick="$(this).parent().find('input[type=file]').click();"></p>

  <p>
   <%= f.text_area :content, :class =>"font-fam1 nmcp1c", placeholder: "Write story" %>
  </p>
  
  <p>
   <%= f.text_field :author, :class =>"font-fam1 nmcp1d", placeholder: "Does your hall have an author" %>
  </p>
 <br /> 
 <p class="font-fam1 appbutton"><%= f.submit "Share Hall", class: "ldbt" %></p>
  
 <% end %>
<br />

<section class="ldcenter">
<p>Wait...</p>
</section>
  
<br />
<br />
</div>
</div>

