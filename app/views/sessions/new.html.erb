<% provide(:title, "Log in to Hallit") %>
<div class="container" style="color: #a94442;"><%= flash[:alert] %></div>
   
   <div class="scarcity">
   <div class="container session">  	
   	
   	  <section class="sessionform">
      <%= form_for(:session, url: sessions_path) do |f| %>
      <p class="">
      <%= f.label :email, :class =>"sessionlabel font-fam2" %>
      <%= f.text_field :email, :class =>"sessionfield font-fam1", placeholder: "Enter email" %>
      </p>
      <p class="font-fam2">
      <%= f.label :password, :class =>"sessionlabel font-fam2" %>
      <%= f.password_field :password, :class =>"sessionfield font-fam1", placeholder: "Enter password" %>
      </p>
      </section>
      <br />
     <p class="appbutton font-fam"> <%= f.submit "Log in", class: "sess-butt btn-primary btn-sm " %></p>
     
    <% end %>

    <p class="sessionlink font-fam">New user? <%= link_to "create an account", signup_path, :"data-no-turbolink" => true, class: "ckl3" %></p>
    
   </div>
   </div>
   
   <p class="misscion sesswarn">Switch to your Iphone or Android Web Device!</p>

