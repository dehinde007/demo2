<% provide(:title, @user.name) %>
<header class="indexhead">
    <nav class="navbar navbar-default navbar-top" role="navigation">
    <div class="">
    <div class="navbar-header">
           
  <span class="navbar-brand">
          	  
    <section class="ush1 dropdown"><%= image_tag @user.avatar(:thumb), class: "img-circle" %>	
			 
	<span class="dropdown">
		 
    <span class="font-fam1 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span id="pgn2"><%= @user.username %></span><span class="caret"></span>
    </span>
    <ul class="dropdown-menu">
     
     <li><%= link_to pluralize(@user.microposts.length, "Hall"), @user, class: "font-fam2" %></li>
     <li class="font-fam2"><a href="<%= following_user_path(@user) %>"><%= pluralize(@user.followed_users.count, "Following") %></a></li>
     <li class="font-fam2"><a href="<%= followers_user_path(@user) %>"><%= pluralize(@user.followers.count, "Follower") %></a></li>
    
    </ul>

    </span>

    </section>
          	
  </span>
      
     <ul class="font-fam ush2 pull-right">          	
       <li> 
          <% if current_user?(@user) %>
          <%= link_to edit_user_path(current_user), class: "hov", :"data-no-turbolink" => true do %>	
          <span class="midhdglyph fa fa-wrench" aria-hidden="true"></span>
          <% end %> 
          <% end %> 
      </li>
      </ul>
        </div>   
      </div><!-- /.container -->
    </nav>
</header> 

<p class="font-fam1 ush3"><%= @user.name.titleize %>
<% if @user.verify == true %>
<span><%= image_tag('verify.png', :class => "verify", "data-toggle"=>"modal", "data-placement"=>"top", "title"=>"Verified Account") %></span>
<% else %>
<% end %>	
</p> 
<p class="font-fam ush4"><%=auto_link(@user.website, :html => { :target => '_blank' }) %></p>
<p class="font-fam ush4"><%= @user.bio %></p>
<div class="ush5">
<hr />
<section class="font-fam ush6"><%= render 'follow_form' if signed_in? %></section>
 
<% if @user.microposts.any? %>

<div class="boxers">
<%= render @microposts %>
</div>

<% elsif current_user == @user %>   
<div class="font-fam1 ush7">Tap Retro Camera to Make Your First Hall
<% else %>    
<% end %>
</div>
</div>

<div class="pager">
<%= will_paginate @microposts, :page_links => false %>
</div>

<div><%= render 'layouts/minfooter' %></div>