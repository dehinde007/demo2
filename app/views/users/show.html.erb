            <span class="icon-bar"></span>
          </span>
          
          <span id="pagename" class="navbar-brand">
          	  
          	  <section class="profile_h" "dropdown"><%= image_tag @user.avatar(:thumb), class: "img-circle" %>	
			 
	<span class="dropdown" >
		 
    <span class="font-fam dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= @user.username %><span class="caret"></span>
    </span>
    <ul class="dropdown-menu">
     <li><%= link_to pluralize(@user.microposts.count, "Hall"), @user, {:style => 'color: #428bca; font-family: ralewayregular; font-weight: normal; font-size: 13px;'} %></li>
     <li class="font-fam"><a href="<%= following_user_path(@user) %>"><%= @user.followed_users.count %> subscribed</a></li>
