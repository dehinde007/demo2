<% provide(:title, @user.name) %>

<header class="indexhead">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="">
    <div class="navbar-header">
           
  <span id="pagename" class="navbar-brand">
          	  
    <section class="profile_h dropdown"><%= image_tag @user.avatar(:thumb), class: "img-circle" %>	
			 
	<span class="dropdown">
		 
    <span class="font-fam dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= @user.username %><span class="caret"></span>
    </span>
    <ul class="dropdown-menu">
     
     <li><%= link_to pluralize(@user.microposts.length, "Hall"), @user, {:style => 'color: #D63636; font-family: ralewayregular; font-weight: normal; font-size: 13px;'} %></li>
     <li class="font-fam"><a href="<%= followers_user_path(@user) %>"><%= @user.followers.count %> subscribers</a></li>
     <li class="font-fam"><a href="<%= following_user_path(@user) %>"><%= @user.followed_users.count %> subscribed</a></li>
     
    </ul>

    </span>

    </section>
          	
  </span>
      
           <ul class="font-fam solve  pull-right">
           	
       <li> 
          <%= link_to search_path, class: "hov", :"data-no-turbolink" => true do %>	
          <span class="headglyph glyphicon glyphicon-search"></span>
          <% end %> 
       </li>
       
      </ul>
        </div>   
      </div><!-- /.container -->
    </nav>
</header> 


<p class="userinfo1"><%= @user.name %>
<% if @user.verify == true %>
<span><img src="/assets/images/verify.png" width="10" height="10" data-toggle="tooltip" data-placement="top" title="Verified Account"/></span>
<% else %>
<% end %>	
</p> 
<p class="userinfo2"><%= @user.bio %></p>
<p class="userinfo2 app_a_link"><%=auto_link(@user.website, :html => { :target => '_blank' }) %></p>

<div class="container userpost">
	<hr />
 <section class="font-fam subscribe-btn"><%= render 'follow_form' if signed_in? %></section>
 <% if @user.microposts.any? %>

      <%= render @microposts %>

   <% elsif current_user == @user %>   
      <div class="font-fam nohall">Tap Camera to Make Your First Hall

   <% else %>    
 
   <% end %>
      </div>
   <div class="pager">
   <%= will_paginate @microposts, :page_links => false %>
   </div>
<br />
<br />

</div>
<div class="footer2"><%= render 'layouts/minfooter' %></div>