<p class="userinfo1"><%= @user.name %>
<% if @user.verify == true%>
<span><img src="/assets/images/ver.png" width="25" height="25" data-toggle="tooltip" data-placement="top" title="Verified Account"/></span>
<% else %>
<% end %>	
</p> 
<p class="userinfo2"><%= @user.bio %></p>
<p class="userinfo2 app_a_link"><%=auto_link(@user.website, :html => { :target => '_blank' }) %></p>

<div class="container userpost">
	<hr />
 <section class="font-fam subscribe-btn"><%= render 'follow_form' if signed_in? %></section>
