            <li>
            	<div class="search">
                <% if signed_in? %> 		
                <%= render 'shared/search' %>                
                <% end %>
                </div>
            </li>
            
            <li class="">
                <%= link_to "setting", edit_user_path(current_user), id: "setting" %> 
              
            </li>
            
            <li class="logout">
                 <%= link_to '<i class="glyphicon glyphicon-lock" >Logout</i>'.html_safe, signout_path, method: "delete"%> 
              
