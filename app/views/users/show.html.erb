<p class="userinfo1"><%= @user.name %></p> 
<p class="userinfo2"><%= @user.bio %></p>
<p class="userverify">
<% if @user.verify == true%>
<span><img src="/assets/images/ver.png" width="25" height="25"/></span>
<% else %>
<br />
<% end %>
</p>

<div class="container userpost">
	<hr />
 <section class="font-fam subscribe-btn"><%= render 'follow_form' if signed_in? %></section>
   <% if @user.microposts.any? %>
      <%= render @microposts %>
   <% else %>   
      <div class="font-fam nohall">Yet to Upload a Hall</p>
   <% end %>
      </div>
   <div class="pager">
   <%= will_paginate @microposts, :page_links => false %>
   </div>
<br />
<br />
</div>
<div class="footer2"><%= render 'layouts/minfooter' %></div>