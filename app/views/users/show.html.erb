<% provide(:title, @user.name) %>
<div class="userprofile">
<div class="container">
	
	<div class="profiletop">	
				
    <p class="profileimg"><%= image_tag @user.avatar(:thumb), class: "img-circle" %></p>  
    <p><%= link_to @user.username, @user, {:style => 'color: black; font-size: 23px;'} %></p>
    <p class="userinfo"><%= @user.name %>.  <%= @user.bio %></p> 
    
    <ul class="profileinfo">
     <li><%= link_to pluralize(@user.microposts.count, "Quote"), @user, {:style => 'color: #428bca; font-weight: bold; font-size: 13px;'} %></li>
     <li><a href="<%= following_user_path(@user) %>"><%= @user.followed_users.count %> subscribed</a></li>
     <li><a href="<%= followers_user_path(@user) %>"><%= @user.followers.count %> subscribers</a></li>
    </ul> 
   
    </div> 
<hr />

</div>

<div class="container">
 <section class="subscribe-btn"><%= render 'follow_form' if signed_in? %></section>
   <% if @user.microposts.any? %>
      <%= render @microposts %>
   <% end %>
</div>
<br />
<br />
</div>
<div class="footer2"><%= render 'layouts/minfooter' %></div>