<% provide(:title, 'Sign up') %>

<div class="alert alert-error">
<%= form_for @user, :html => { :multipart => true} do |f| %>
<%= render 'shared/error_messages', object: f.object %>
</div>

<div id="signup_box">
<div id="signup_in">
	
<h1 id="sign_up">Sign up</h1>

      <%= f.label :fullname %>
      <%= f.text_field :name %>
      
      <%= f.label :username %>
      <%= f.text_field :username %>
      
      <%= f.label :avatar %>
     <span id="signupavi"><%= f.file_field :avatar %></span>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

     <p><%= f.submit "Create", class: "btn btn-sm btn-danger" %></p>
    <% end %>
  </div>
</div>
<div id="signup_spc"></div>
<div class="app_footer"><%= render 'layouts/footer' %></div>
