<% provide(:title, @user.name) %>
<div class="alert alert-error">
<%= form_for @user, :html => { :multipart => true} do |f| %>
<%= render 'shared/error_messages', object: f.object %>
</div>

 <div class="container edt font-fam5"> 
    <p class="edthd font-fam3">Edit your personal info</p>
    
    <p>
     <%= f.text_field :name, class: "edt1", placeholder: "Fullname" %>
    </p>
   
    <p>
     <%= f.text_field :username, class: "edt1", placeholder: "Username" %>
    </p>
      
    <div class="font-fam1">
      <i class="edt2"><%= f.file_field :avatar, onchange: "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());" %></i>
      <p class="glyphicon glyphicon-camera edt3" data-toggle="tooltip" data-placement="top" title="Upload a avatar" onclick="$(this).parent().find('input[type=file]').click();"></p>     
    </div>
   
    <p>
      <%= f.text_field :email, class: "edt1", placeholder: "Email" %>
    </p> 
   
    <p>
      <%= f.text_field :bio, class: "edt1", placeholder: "Bio" %>
    </p>
    
    <p>
      <%= f.text_field :website, class: "edt1", placeholder: "Website" %>
    </p>
    
    <p>
      <%= f.password_field :password, class: "edt1", placeholder: "Password" %>
    </p>
    
    <p>
      <%= f.password_field :password_confirmation, class: "edt1", placeholder: "Confirm password" %>
    </p>
   
   <p class="appbutton edt4"><%= f.submit "Confirm", class: "font-fam3 btn btn-primary" %></p>
      
    <% end %>
    
    <br />
   <%= image_tag asset_path('assets/images/ring.gif'), class: "ldmsg" %>  
  </div>
  <br />
  <br />
<div><%= render 'layouts/minfooter' %></div>