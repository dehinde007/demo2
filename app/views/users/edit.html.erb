<% provide(:title, "Edit user") %>
<div class="alert alert-error">
<%= form_for @user, :html => { :multipart => true} do |f| %>
<%= render 'shared/error_messages', object: f.object %>
</div>

 <div class="container editusr"> 
 
    <p class="container font-fam">
     <span class="glyphicon glyphicon-user"></span>
     <%= f.text_field :name, class: "edit-lab", placeholder: "fullname" %>
    </p>
   
    <p class="container font-fam">
     <span class="glyphicon glyphicon-tag"></span>
     <%= f.text_field :username, class: "edit-lab", placeholder: "username" %>
    </p>
      
    <p class="container font-fam">
      <span class="glyphicon glyphicon-paperclip"></span>
      <section class="editavi"><%= f.file_field :avatar, class: "usereditavi" %></section>
    </p>
   
    <p class="container font-fam">
      @
      <%= f.text_field :email, class: "edit-lab", placeholder: "email" %>
    </p> 
   
    <p class="container font-fam">
      <span class="glyphicon glyphicon-list-alt"></span>
      <%= f.text_field :bio, class: "edit-lab", placeholder: "bio"%>
    </p>
    
    <p class="container font-fam">
      <span class="glyphicon glyphicon-globe"></span>
      <%= f.text_field :website, class: "edit-lab", placeholder: "website" %>
    </p>
    
    <p class="container font-fam">
      <span class="glyphicon glyphicon-lock"></span>
      <%= f.password_field :password, class: "edit-lab", placeholder: "password" %>
    </p>
    
    <p class="container font-fam">
      <span class="glyphicon glyphicon-ok-circle"></span>
      <%= f.password_field :password_confirmation, class: "edit-lab", placeholder: "password confirmation" %>
    </p>
   
   <p class="font-fam appbutton edit_butt"><%= f.submit "Save", class: "btn-primary btn-sm" %></p>
      
    <% end %>
    
    <br />
   <%= image_tag asset_path('assets/images/ring.gif'), class: "loaderd" %>  
  </div>
  <br />
  <br />
  
