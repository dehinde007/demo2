<% provide(:title, "Edit user") %>
<div id="edit">
<h1 class="page_name">Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user, :html => { :multipart => true} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
      
      <%= f.label :fullname %>
      <%= f.text_field :name %>
      
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :bio %>
      <%= f.text_field :bio %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <p id="edsv"><%= f.submit "Save", class: "btn btn-sm btn-primary" %></p>
    <% end %>
   

    
 </div>
  </div>
</div>
<div class="app_footer"><%= render 'layouts/footer' %></div>