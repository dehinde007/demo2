<% provide(:title, @user.name) %>
<header class="indexhead">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="">
    <div class="navbar-header">
           
        <span id="pagename" class="navbar-brand font-fam">
    	   <%= link_to :back, class: "hov", :"data-no-turbolink" => true do %>	
          <span class="headglyph glyphicon glyphicon-menu-left"></span>
          <% end %> 
        </span>
        
       <span id="pagenameee" class="navbar-brand font-fam">Update Info</span>
      
      <ul class="font-fam solve  pull-right">
      	
      <li> 
          <%= link_to search_path, class: "hov", :"data-no-turbolink" => true do %>	
          <span class="headglyph glyphicon glyphicon-search"></span>
          <% end %> 
      </li>
            
            
      </ul>
        </div>   
      </div><!-- /.container -->
    </nav>
</header> 

<div class="alert alert-error">
<%= form_for @user, :html => { :multipart => true} do |f| %>
<%= render 'shared/error_messages', object: f.object %>
</div>

 <div class="container editusr"> 
 
    <p class="container font-fam">
     Fullname
     <%= f.text_field :name, class: "edit-lab", placeholder: "fullname" %>
    </p>
   
    <p class="container font-fam">
     Username
     <%= f.text_field :username, class: "edit-lab", placeholder: "username" %>
    </p>
      
    <p class="container font-fam">
      </span><span class="editavatar">Avatar</span>
      <section class="editavi"><%= f.file_field :avatar, onchange: "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());" %></section>
      <p class="glyphicon glyphicon-camera editavi-input" data-toggle="tooltip" data-placement="top" title="Upload a Hall" onclick="$(this).parent().find('input[type=file]').click();"></p>     
    </p>
   
    <p class="container font-fam">
      Email
      <%= f.text_field :email, class: "edit-lab", placeholder: "email" %>
    </p> 
   
    <p class="container font-fam">
      Bio
      <%= f.text_field :bio, class: "edit-lab", placeholder: "bio" %>
    </p>
    
    <p class="container font-fam">
      Website
      <%= f.text_field :website, class: "edit-lab", placeholder: "website" %>
    </p>
    
    <p class="container font-fam">
      Password
      <%= f.password_field :password, class: "edit-lab", placeholder: "password" %>
    </p>
    
    <p class="container font-fam">
      Confirm password
      <%= f.password_field :password_confirmation, class: "edit-lab", placeholder: "confirm password" %>
    </p>
   
   <p class="font-fam appbutton edit_butt"><%= f.submit "Update", class: "btn-primary btn-sm" %></p>
      
    <% end %>
    
    <br />
   <%= image_tag asset_path('assets/images/ring.gif'), class: "loaderd" %>  
  </div>
  <br />
  <br />
  
<div class="footer2"><%= render 'layouts/minfooter' %></div>