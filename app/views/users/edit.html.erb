<% provide(:title, @user.name) %>
<header class="indexhead">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="">
    <div class="navbar-header">
           
      <span id="pagename2" class="navbar-brand font-fam">Account</span>

    </div>   
    </div><!-- /.container -->
    </nav>
</header> 
<div class="alert alert-error">
<%= form_for @user, :html => { :multipart => true} do |f| %>
<%= render 'shared/error_messages', object: f.object %>
</div>

 <div class="container editusr"> 
 
    <p class="container">
     <%= f.text_field :name, class: "edit-lab font-fam1", placeholder: "fullname" %>
    </p>
   
    <p class="container">
     <%= f.text_field :username, class: "edit-lab font-fam1", placeholder: "username" %>
    </p>
      
    <p class="font-fam3">
      <section class="editavi"><%= f.file_field :avatar, onchange: "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());" %></section>
      <p class="glyphicon glyphicon-camera editavi-input" data-toggle="tooltip" data-placement="top" title="Upload a Hall" onclick="$(this).parent().find('input[type=file]').click();"></p>     
    </p>
   
    <p class="container">
      <%= f.text_field :email, class: "edit-lab font-fam1", placeholder: "email" %>
    </p> 
   
    <p class="container">
      <%= f.text_field :bio, class: "edit-lab font-fam1", placeholder: "How do you spend most of your time?" %>
    </p>
    
    <p class="container">
      <%= f.text_field :website, class: "edit-lab font-fam1", placeholder: "website" %>
    </p>
    
    <p class="container font-fam">
      <%= f.password_field :password, class: "edit-lab font-fam1", placeholder: "password" %>
    </p>
    
    <p class="container">
      <%= f.password_field :password_confirmation, class: "edit-lab font-fam1", placeholder: "confirm password" %>
    </p>
   
   <p class="appbutton edit_butt font-fam"><%= f.submit "Update", class: "loadbut" %></p>
      
    <% end %>
    
    <br />
   <%= image_tag asset_path('assets/images/ring.gif'), class: "loaderd" %>  
  </div>
  <br />
  <br />
