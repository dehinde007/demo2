
	<div class="feedhouse">
		
    <section class="feediteminfo">
    <%= link_to (image_tag feed_item.user.avatar.url(:mini), class: "img-circle"), feed_item.user %>
    <%= link_to feed_item.user.username, feed_item.user, class: "feedusern"  %>
    <span class="font-fam feedtime"><%= time_ago_in_words(feed_item.created_at) %> ago</span>
    </section>
   
  	<div class="puffin">
    <span id="<%= feed_item.id %>"> 
	<div class="puffauto">
  	<%= link_to (image_tag feed_item.photo.url(:medium), class: "img-responsive"), feed_item, :"data-no-turbolink" => true %>
  	</div>
  	</div>
		
    </div>
    
    <section class="container contentlength">
    <p class="font-fam feedlikeicon">
    <span class="glyphicon glyphicon-heart"></span> <%= pluralize(feed_item.likes.count, "like") %>
  	</p>		
    <% if feed_item.content.length > 125 %>
  	<%= auto_link{truncate(feed_item.content, length: 350)} %>
  	<% else %>
  	<%= auto_link(feed_item.content, :html => { :target => '_blank' }) %>
  	<% end %>
<span class="postauthor">
<i>
   	<% if feed_item.author? %>
    - <%= feed_item.author %>
    <% else %>
    <% end %>  
</i>
</span>   	
    </section>

